<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_home_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_home_table"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="fill_horizontal"
        app:layout_scrollFlags="enterAlways"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Widget"
        app:tabTextColor="@color/colorTiShiWenZi" />

    <FrameLayout
        android:id="@+id/tab_home_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_home_table" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_home_content"
        android:gravity="center_vertical"
        android:padding="8dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/colorTiShiWenZi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轻点拉，人家是有底线的"
            android:textColor="@color/colorTiShiWenZi"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/colorTiShiWenZi" />
    </LinearLayout>
</RelativeLayout>