<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_line_bg"
    tools:context="net.osplay.ui.fragment.sub.DetailsTopicInfoFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/tbl_fm_details_topic_info"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@color/colorWhite"
        app:tabGravity="fill"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/colorPrimaryDark" />

    <FrameLayout
        android:id="@+id/container_fm_details_topic_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbl_fm_details_topic_info" />
</android.support.constraint.ConstraintLayout>
