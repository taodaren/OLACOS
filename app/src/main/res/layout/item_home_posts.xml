<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_hot_posts_list_bg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/example12"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_hot_posts_info_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="5dp"
            android:text="欢迎来到实力至上主义的教师欢迎来到实力至上主义的教师欢迎来到实力至上主义的教师"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_hot_posts_type_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="摄影"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tv_hot_posts_comment_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableEnd="@drawable/ic_comment"
                android:padding="3dp"
                android:text="310"
                android:textColor="@color/colorTiShiWenZi"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>