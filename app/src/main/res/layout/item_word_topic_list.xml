<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/posts_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_topic_list_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/avatar_boy" />

            <TextView
                android:id="@+id/tv_topic_list_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/img_topic_list_avatar"
                android:padding="5dp"
                android:text="叶秋"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_topic_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="发布时间"
                android:textColor="@color/colorTiShiWenZi"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_topic_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="4dp"
                android:text="入奥世普雷方知二次元世界也有程序员！"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_topic_list_icon"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/example06" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:background="@color/colorContentBg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="4dp">

                <LinearLayout
                    android:id="@+id/ll_topic_list_zan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/img_topic_list_zan"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_sugar_unselected" />

                    <TextView
                        android:id="@+id/tv_topic_list_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="12"
                        android:textColor="@color/colorPang"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_topic_list_collect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/img_topic_list_collect"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_collect_unselected" />

                    <TextView
                        android:id="@+id/tv_topic_list_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="345"
                        android:textColor="@color/colorPang"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_topic_list_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_comment_32" />

                    <TextView
                        android:id="@+id/tv_topic_list_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="271"
                        android:textColor="@color/colorPang"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>