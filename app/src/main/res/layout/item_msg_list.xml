<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/colorWhite"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_msg_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:padding="10dp"
            android:src="@drawable/avatar_boy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_msg_avatar"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/colorBlack2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/reason_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Hello，奥世普雷"
                android:textColor="@color/colorTiShiWenZi" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="right">
                <Button
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="同意"
                    android:background="@drawable/vote_shape_yellow"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:id="@+id/message_item_agree_tv"/>
                <Button
                    android:id="@+id/message_item_disagree_tv"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="不同意"
                    android:background="@drawable/vote_shape_yellow"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>