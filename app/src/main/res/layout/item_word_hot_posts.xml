<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@id/img_hot_posts_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/example12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTranslucent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_hot_posts_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="欢迎来到实力至上主义的教师欢迎来到实力至上主义的教师欢迎来到实力至上主义的教师"
                    android:textColor="@color/colorContentBg"
                    android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_hot_posts_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="摄影"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tv_hot_posts_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/tv_hot_posts_type"
                android:text="osplay"
                android:textColor="@color/colorBlack2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_hot_posts_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableEnd="@drawable/ic_comment"
                android:padding="3dp"
                android:text="310"
                android:textColor="@color/colorTiShiWenZi"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>